<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/radioGroup"
        android:layout_marginTop="5dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fer caixa"
            android:id="@+id/radioButton2"
            android:layout_below="@+id/radioButton"
            android:layout_alignParentStart="true"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Llistar comandes entre dues dates"
            android:id="@+id/radioButton"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:checked="false" />

    </RadioGroup>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText6"
        android:background="@drawable/rounded_edittext"
        android:hint="DD-MM-YYYY"
        android:clickable="true"
        android:enabled="true"
        android:focusable="false"
        android:editable="false"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="55dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Data:"
        android:id="@+id/textView21"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Fins:"
        android:id="@+id/textView22"
        android:layout_marginTop="105dp"
        android:layout_marginLeft="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText7"
        android:background="@drawable/rounded_edittext"
        android:hint="DD-MM-YYYY"
        android:clickable="true"
        android:enabled="true"
        android:focusable="false"
        android:editable="false"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="105dp"
        android:layout_marginLeft="55dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:id="@+id/listView3"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total recaptat:"
        android:id="@+id/textView23"
        android:layout_below="@+id/radioGroup"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Desde: "
        android:id="@+id/textView27"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="75dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText8"
        android:background="@drawable/rounded_edittext"
        android:hint="DD-MM-YYYY"
        android:clickable="true"
        android:enabled="true"
        android:focusable="false"
        android:editable="false"
        android:layout_toEndOf="@+id/textView27"
        android:selectAllOnFocus="false"
        android:layout_marginTop="75dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data i hora"
        android:id="@+id/datahora"
        android:layout_alignParentStart="false"
        android:layout_above="@+id/listView3"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Taula"
        android:id="@+id/taula"
        android:layout_toEndOf="@+id/datahora"
        android:layout_above="@+id/listView3"
        android:layout_marginLeft="120dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preu"
        android:id="@+id/price"
        android:layout_toEndOf="@+id/taula"
        android:layout_above="@+id/listView3"
        android:layout_marginLeft="83dp" />

</RelativeLayout>
