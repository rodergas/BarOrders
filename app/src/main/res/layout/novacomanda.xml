<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear comanda"
        android:id="@+id/button3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="afegirNovaComanda" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dataEdit"
        android:background="@drawable/rounded_edittext"
        android:layout_toRightOf="@+id/imageView3"

        android:layout_marginTop="5dp"
        android:hint="DD-MM-YYYY"
        android:clickable="true"
        android:enabled="true"
        android:focusable="false"
        android:editable="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:background="@drawable/rounded_edittext"
        android:hint="HH:MM"
        android:clickable="true"
        android:enabled="true"
        android:focusable="false"
        android:editable="false"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_marginTop="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:background="@drawable/rounded_edittext"
        android:layout_toRightOf="@+id/imatge"
        android:hint="XX"
        android:clickable="true"
        android:enabled="true"
        android:focusable="false"
        android:editable="false"
        android:layout_marginTop="5dp" />

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="185dp"
        android:id="@+id/listView"
        android:numColumns="2"
        android:verticalSpacing="3dp"
        android:layout_below="@+id/dataEdit"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="252dp"
        android:id="@+id/listView2"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/listView"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preu total de la comanda:"
        android:id="@+id/textView12"
        android:layout_below="@+id/listView2"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="85dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:layout_below="@+id/listView2"
        android:layout_toRightOf="@+id/textView12"
        android:text="0.00â‚¬"
        android:singleLine="true"
        android:layout_marginLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="U."
        android:id="@+id/textView14"
        android:layout_alignParentStart="true"
        android:layout_marginTop="225dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Producte"
        android:id="@+id/textView15"
        android:layout_toRightOf="@+id/textView14"
        android:layout_marginTop="225dp"
        android:layout_marginLeft="11dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C/u"
        android:id="@+id/textView16"
        android:layout_toRightOf="@+id/textView15"
        android:layout_marginTop="225dp"
        android:layout_marginLeft="110dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        android:id="@+id/textView17"
        android:layout_toRightOf="@+id/textView16"
        android:layout_marginTop="225dp"
        android:layout_marginLeft="45dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView3"
        android:src ="@drawable/calendar"
        android:layout_alignParentStart="true"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src ="@drawable/reloj"
        android:layout_toRightOf="@+id/dataEdit"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:id="@+id/imatge"
        android:src ="@drawable/mesa"
        android:layout_toRightOf="@+id/editText2"
        android:layout_toEndOf="@+id/textView16"
        android:layout_marginLeft="10dp" />

</RelativeLayout>
